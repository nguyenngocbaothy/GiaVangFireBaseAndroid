<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.developer.nguyenngocbaothy.demogiavangfirebase.MainActivity">


    <TextView
        android:id="@+id/txtUS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USA"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="57dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txtAU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Australia"
        android:textSize="30sp"
        android:layout_marginTop="69dp"
        app:layout_constraintTop_toBottomOf="@+id/txtUS"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txtVN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VietNam"
        android:textSize="30sp"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/txtAU"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/edtUS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="57dp"
        android:ems="10"
        android:enabled="false"
        android:hint="Enter your exchange rate"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@+id/txtUS"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtAu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="62dp"
        android:ems="10"
        android:hint="Enter your exchange rate"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@+id/txtAU"
        app:layout_constraintTop_toBottomOf="@+id/edtUS" />

    <EditText
        android:id="@+id/edtVN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="Enter your exchange rate"
        android:layout_marginTop="62dp"
        app:layout_constraintTop_toBottomOf="@+id/edtAu"
        app:layout_constraintLeft_toRightOf="@+id/txtVN"
        android:layout_marginLeft="7dp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active to add value"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="131dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.503" />

    <Button
        android:id="@+id/btnChart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chart"
        android:background="#5148b9d9"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/switch1"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>
